    <select id="drop">
        <option value="5" selected>5</option>
        <option value="10">10</option>
        <option value="15">15</option>
        <option value="20">20</option>
        <option value="25">25</option>
    </select>

    <canvas id="canvas"></canvas>
    <button id="clear">Clear the Board</button>

</body>
